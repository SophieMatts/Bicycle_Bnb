<html>
  <head>
    <meta charset="utf-8">
    <title>Bicycle BNB</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="data:image/x-icon;" type="image/x-icon">
    <!-- We need this line below for responsiveness! -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheets" href="components/_index.scss">
    <link rel="stylesheets" href="configs/_fonts.scss">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  </head>

  <body>
    <div class="container">
      <div id="flex-wrap">
        <div>
          <h5>Types of Bike</h5>
        </div>
      </div>

      <div id="flex-wrap">
        <div class="row">
          <%= link_to bikes_path do %>
            <div class="home_bike-card" style="background-image: url(<%= image_path('_home_bike_card/all.bikes.jpeg')%>)">
              <div class="home_bike-description">
                <h5> All Bikes </h5>
              </div>
            </div>
          <% end %>


          <div class="home_bike-card" style="background-image: url(<%= image_path('_home_bike_card/road.bike.jpg')%>)">
            <div class="home_bike-description">
              <h5> Road </h5>
              <p>For long Distance on the Road</p>
            </div>
          </div>

          <div class="home_bike-card" style="background-image: url(<%= image_path('_home_bike_card/mountain.bike.png')%>)">
            <div class="home_bike-description">
              <h5> Mountain </h5>
              <p>Best for off-road<p>
            </div>
          </div>

        </div>
      </div>
    </div>

    <div class="container">
      <div id="flex-wrap">
        <div>
          <h5>Locations</h5>
        </div>
      </div>
      <div id="flex-wrap">
        <div class="row">
          <div class="location-card" style="background-image: url(<%= image_path('_lcard/london.bike.png')%>)">
            <div class="location-description">
              <h5> London </h5>
              <p>Hire from here!</p>
            </div>
          </div>

          <div class="location-card" style="background-image: url(<%= image_path('_lcard/paris.bike.jpeg')%>)">
            <div class="location-description">
              <h5> Paris </h5>
              <p>Hire from here!</p>
            </div>
          </div>

          <div class="location-card" style="background-image: url(<%= image_path('_lcard/amsterdam.bike.jpeg')%>)">
            <div class="location-description">
              <h5> Amsterdam </h5>
              <p>Hire from here!</p>
            </div>
          </div>
        </div>
      </div>
    </div>


    <div class="footer">
      <footer>
        <div class="row justify-content-center">
          <div class="col-sm-4 col-md-3 item">
            <h3>Support</h3>
            <ul>
              <li><a href="#">Help Centre</a></li>
              <li><a href="#">Safety Information</a></li>
              <li><a href="#">Cancellation Options</a></li>
            </ul>
          </div>
          <div class="col-sm-4 col-md-3 item">
            <h3>Community</h3>
            <ul>
              <li><a href="#">Company</a></li>
              <li><a href="#">Team</a></li>
              <li><a href="#">Meetup</a></li>
            </ul>
          </div>
          <div class="col-sm-4 col-md-3 item">
            <h3>About</h3>
            <ul>
              <li><a href="#">Our Story</a></li>
              <li><a href="#">Careers</a></li>
              <li><a href="#">Newsroom</a></li>
            </ul>
          </div>
          <div class="col-lg-3 item social"><a href="#"><i class="icon ion-social-facebook"></i></a><a href="#"><i class="icon ion-social-twitter"></i></a><a href="#"><i class="icon ion-social-snapchat"></i></a><a href="#"><i class="icon ion-social-instagram"></i></a>
            <p class="copyright">Bicycle BNB Â© 2022</p>
          </div>
        </div>
      </footer>
    </div>
  </body>


</html>
