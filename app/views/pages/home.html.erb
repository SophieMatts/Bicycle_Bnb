<html>
  <head>
    <meta charset="utf-8">
    <title>Bicycle BNB</title>
    <link rel="shortcut icon" href="data:image/x-icon;" type="image/x-icon">
    <!-- We need this line below for responsiveness! -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheets" href="components/_index.scss">
  </head>

  <body>
    <div class="container">
      <h5>Bicycle BNB</h5>
      <h6>Need a ride? Check out our locations. </h6>
      <div class="row">
        <div class="column">
          <div class="location-card" style="background-image: url(<%= image_path('london.bike.jpeg')%>)">
            <div class="location-description">
              <h5> London </h5>
              <p>Hire from here!</p>
            </div>
          </div>
      </div>
        <div class="column">
          <div class="location-card" style="background-image: url(<%= image_path('paris.bike.jpeg')%>)">
            <div class="location-description">
              <h5> Paris </h5>
              <p>Hire from here!</p>
            </div>
          </div>
        </div>
        <div class="column">
          <div class="location-card" style="background-image: url(<%= image_path('amsterdam.bike.jpeg')%>)">
            <div class="location-description">
              <h5> Amsterdam </h5>
              <p>Hire from here!</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
