        <div class="row">
          <%= link_to bikes_path do %>
            <div class="home_bike-card" style="background-image: url(https://media.istockphoto.com/photos/bicycle-wheels-closeup-picture-id1149625161?k=20&m=1149625161&s=612x612&w=0&h=gPw6yZpADzwB4NbUCLlBdZTd8sMZnxxOKGMbJrDEKHw=)">
