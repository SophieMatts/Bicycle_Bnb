    <div class="container">
      <%# <div id="flex-wrap">
        <div>
          <h5>Locations</h5>
        </div>
      </div> %>
      <div id="flex-wrap">
        <div class="row">
          <div class="location-card" style="background-image: url(http://static1.squarespace.com/static/535ed20ce4b06f620aba7217/53d318c8e4b02c5a7b25645c/53d31909e4b02c5a7b25762c/1406344187520/hipster-couple-with-bikes-in-london.jpg?format=1000w)">
