<div class="container">

    <div class="card-grid-container">

      <% @bikes.each do |bike| %>

        <div class="card-wrapper">

          <% if bike.photo.attached? %>
            <%= cl_image_tag bike.photo.key, height: 200, width: 300, crop: :fill %>
          <%else%>
          <h1>Photo not attached??!!!</h1>
            <div class="bike-photo"> </div>
          <%end%>

          <div class="all-bike-info">

            <div class="d-flex justify-content-between align-items-center py-2 ">
              <div> <h2 class="m-0 sub-heading"> <%= bike.title %> </h2> </div>
              <%= link_to "View", bike_path(bike), class: "btn btn-primary btn-sm btn-main" %>
            </div>

            <div>
              <p id="bike-cost"> Â£<%= bike.cost %> per day</p>
            </div>

            <div class="text-bike">
              <div >
                <p> <strong> <%= bike.location %> </strong> </p>
                <p> <strong> <%= bike.bike_type %> </strong> </p>
              </div>
            </div>

          </div>

        </div>

      <% end %>

    </div>

</div>
