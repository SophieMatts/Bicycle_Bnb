<form class="contanier">
  <h2 class="mt-3">🚴🏼‍♂️ Edit Booking</h2>
  <div class="row justify-content-center">
    <div class="col-8">

      <form class="booking-form">
        <%= simple_form_for @booking do |f| %>
          <div class="form-image col-md-7 col-sm-12"></div>
          <form class="form-fields col-md-5 col-sm-12">
            <%= f.input :start_date, as: :date,
                                     start_year: Date.today.year,
                                     end_year: Date.today.year + 2,
                                     order: [:day, :month, :year],
                                     label: "Start date", class: "form-control"  %>
            <%= f.input :end_date, as: :date,
                                   start_year: Date.today.year,
                                   end_year: Date.today.year + 2,
                                   order: [:day, :month, :year],
                                   label: "End date", class: "form-control"  %>
            <%= f.submit "Submit", class: "btn btn-main col-sm-12" %>
          </form>
        <% end %>
      </form>


    </div>
  </div>
</div>
