<div class="container">
  <h2 class="mt-3">🚴🏼‍♂️ My Bookings</h2>
  <div class="row justify-content-center">
    <div class="col-8 m-3">
      <% @bookings.each do |booking| %>
        <div class="booking-card d-flex">
          <div class="booking-card-section">
          <div class="d-flex justify-content-between">
            <p class="">Booking confirmed</p>
            <p><%= link_to "View details >" %></p>
          </div>
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg"/>

          <div class="d-flex justify-content-between">
            <div class="card-trip-detail mr-5">
              <p><strong>Start date</strong> - <%= booking.start_date %></p>
              <p><strong>End date</strong> - <%= booking.end_date %></p>
            </div>
            <div class="card-trip-detail ">
              <p>£<%= booking.bike.cost %></p>
            </div>
          </div>

          </div>

          <div class="booking-card-section">
            <div class="booking-btn-group">
              <%= link_to "Contact", "#", class: "btn booking-btn" %>
              <%= link_to "Cancel", booking_path(booking), method: :delete, data: { confirm: "Are you sure?"}, class: "btn booking-btn" %>
            </div>
          </div>

        </div>
      <% end %>
    </div>
  </div>
</div>
