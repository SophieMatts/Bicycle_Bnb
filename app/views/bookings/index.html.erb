<div class="container">
  <h2 class="mt-3">🚴🏼‍♂️ Your Bookings</h2>
  <div class="row justify-content-center">
   <div class="col-8 mt-3">
    <% @bookings.each do |booking| %>
      <div class="booking-card">
       <%= image_tag("Random_bike.jpg") %>
      <div class="booking-info mr-5 d-flex flex-column justify-content-center">
        <h3><%= booking.bike.title %></h3>
        <p class="mb-3"><%= booking.bike.description %></p>
        <p><strong>Type</strong> - <%= booking.bike.bike_type %></p>
        <p><strong>Location</strong> - <%= booking.bike.location %></p>
        <div class="booking-info-date d-flex justify-content-between">
          <p><strong>Start date</strong><br/> <%= booking.start_date %></p>
          <p><strong>End date</strong><br/> <%= booking.end_date %></p>
        </div>
      </div>
      <div class="booking-btn-group d-flex flex-column justify-content-center">
        <%= link_to "Edit Booking", "#", class: "btn btn-booking mb-3" %>
        <%= link_to "Contact the Owner", "#", class: "btn btn-booking mb-3" %>
        <%= link_to "Cancel Booking", booking_path(booking), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-booking"%>
      </div>
    </div>
    <% end %>
   </div>
  </div>

</div>
